{
  "compilerOptions": {
    "lib": ["es2018","dom"],
    "target": "es5",
    "allowJs": true,
    "skipLibCheck": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "typeRoots": ["typings"]
  },
  "include": [
    "src"
  ],
  "exclude": [
    "public",
    "node_modules"
  ]
}